<apex:page controller="Addingnoaccs">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockTable value="{!allaccs}" var="accs">
                <apex:column headerValue="Name">
                    <apex:inputField value="{!accs.name}"/>
                </apex:column>
                <apex:column headerValue="Phone">
                    <apex:inputField value="{!accs.phone}"/>
                </apex:column>
            </apex:pageBlockTable>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="addrow" action="{!addrow}"/>
                <apex:commandButton value="removerow" action="{!removerow}"/>
                <apex:commandButton value="save">
                <apex:actionSupport event="onmouseover" action="{!save}"/>
                </apex:commandButton>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>     
 </apex:page>